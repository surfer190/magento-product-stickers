<?php
  $product = $this->getProduct();
  if (!$product)
  {
      if ($product = Mage::registry('product'))
      {
          $stickers = $product->getStickers();
      }
  }
  $stickers = explode(',', $product->getStickers());
?>
<div class="stickers-panels">
  <?php foreach($stickers as $sticker): ?>
      <p><?php echo $this->getPanelContent($sticker) ?></p>
  <?php endforeach; ?>
</div>
